/* Add your CSS here */

/* Body with background image and metallic gold/black color scheme */
body {
  /* Set background image */
  background-image: url('img/rubaitul-azad-3WhPfoOX888-unsplash.jpg');
  background-size: cover; /* Make image cover the entire page */
  background-position: center; /* Center the image */
  background-attachment: fixed; /* Keep background fixed while scrolling */
  background-repeat: no-repeat; /* Don't repeat the image */
  
  /* Set text color to metallic gold */
  color: #D4AF37;
  
  /* Remove default margin */
  margin: 0;
  padding: 0;
  
  /* Set font family */
  font-family: Arial, sans-serif;
}

/* Header styling with black background and gold text */
header {
  background-color: rgba(0, 0, 0, 0.85); /* Black with slight transparency */
  color: #D4AF37; /* Metallic gold text */
  padding: 40px 20px;
  text-align: center;
}

/* Center the header content */
header div {
  max-width: 800px;
  margin: 0 auto;
}

/* Style the Intel logo */
header img {
  width: 150px; /* Resize the logo */
  height: auto;
  margin-bottom: 20px;
}

/* Main heading styling with reflective gold gradient */
h1 {
  /* Create reflective gradient effect */
  background: linear-gradient(135deg, 
    #B8860B 0%,    /* Dark gold */
    #FFD700 25%,   /* Bright gold */
    #FFED4E 40%,   /* Light gold glare */
    #FFD700 50%,   /* Bright gold */
    #D4AF37 75%,   /* Medium gold */
    #B8860B 100%   /* Dark gold */
  );
  background-size: 200% 200%; /* Make gradient larger for animation */
  background-clip: text; /* Clip gradient to text */
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent; /* Make text transparent to show gradient */
  
  font-size: 2.5em;
  margin: 10px 0;
  
  /* Animate the glare effect */
  animation: reflectiveGlare 3s ease-in-out infinite;
}

/* Keyframe animation for moving glare */
@keyframes reflectiveGlare {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Subheading paragraph */
header p {
  color: #D4AF37; /* Metallic gold */
  font-size: 1.2em;
  line-height: 1.6;
}

/* Timeline section styling */
section {
  /* Use Flexbox for horizontal layout on large screens */
  display: flex;
  flex-direction: row; /* Cards go horizontally */
  overflow-x: auto; /* Enable horizontal scrolling */
  overflow-y: hidden; /* Hide vertical overflow */
  padding: 40px 20px;
  gap: 20px; /* Space between cards */
  
  /* Smooth scrolling */
  scroll-behavior: smooth;
  
  /* Custom scrollbar styling */
  scrollbar-width: thin;
  scrollbar-color: #D4AF37 rgba(0, 0, 0, 0.3);
}

/* Webkit browsers scrollbar styling */
section::-webkit-scrollbar {
  height: 8px; /* Scrollbar height for horizontal scrolling */
}

section::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.3);
}

section::-webkit-scrollbar-thumb {
  background: #D4AF37; /* Gold scrollbar */
  border-radius: 4px;
}

section::-webkit-scrollbar-thumb:hover {
  background: #FFD700; /* Brighter gold on hover */
}

/* Timeline card styling with reflective border */
